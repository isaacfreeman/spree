<script type='text/template' id='variant_<%= variant.id %>_image_edit_template'>
  <tbody id="spree_image_{{ image.id }}" data-hook="images_row" class="image {{ image.parity }}">
    <tr class="edit" data-hook="admin_image_form_fields">
      <td></td>
      <td>

        <div data-hook="file" class="field">
          <label for="product_variants_attributes_<%= variant.id %>_images_attributes_{{ image.id }}_attachment">Filename</label><br>
          <input id="product_variants_attributes_<%= variant.id %>_images_attributes_{{ image.id }}_attachment" name="product[variants_attributes][<%= variant.id %>][images_attributes][{{ image.id }}][attachment]" type="file">
        </div>
      </td>
      <td data-hook="alt_text" class="field">
        <label for="product_variants_attributes_<%= variant.id %>_images_attributes_{{ image.id }}_alt">Alternative Text</label><br>
        <textarea class="fullwidth" id="product_variants_attributes_<%= variant.id %>_images_attributes_{{ image.id }}_alt" name="product[variants_attributes][<%= variant.id %>][images_attributes][{{ image.id }}][alt]" rows="4">{{ image.alt }}</textarea>
      </td>

      <td class="actions">
        <div class="form-buttons filter-actions actions" data-hook="buttons">
          <a class="fa fa-ok icon_link with-tip no-text" data-target="spree_image_{{ image.id }}" href="#"></a>
        </div>
      </td>

    </tr>
    <input id="product_variants_attributes_<%= variant.id %>_images_attributes_{{ image.id }}_id" name="product[variants_attributes][<%= variant.id %>][images_attributes][{{ image.id }}][id]" type="hidden" value="">
  </tbody>
</script>
